{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
        "header-max-length": [2, "always", 150],
        "subject-case": [2, "always", "sentence-case"],
        "type-case": [2, "always", "lower-case"],
        "type-enum": [2, "always", [
            "config",
            "docs",
            "feature",
            "hotfix",
            "improvement",
            "refactor",
            "release",
            "test"
        ]]
    }
}
